.articles-content
  col(12/12)

.articles-nav
  col(2.5/12)
  .panel
    margin-top 20px
    list-style none
    padding 10px
    background #FFF
    border 1px solid $border_med
    height auto
    max-height calc(100vh - 220px)
    overflow-y auto
  ol
    list-style none
  li
    margin-left 0
    padding 10px 8px 2px 8px
    &.is-current
      a
        font-weight bold
      span
        color $text
      &:before
        content 'â–º '
        float left
        width 0
        position relative
        right 17px
        color $border_med
        font-size 12px
        top 3px
        height 0px
  a
    color $text
    font-size 15px
    text-decoration none
    white-space nowrap
    text-overflow ellipsis
    display flex
    width 170px
    justify-content space-between
  span
    color $text_med

.articles-list
  col(9.5/12)

.articles-nav .affix
  width 203px
  top $nav_height

.articles__anchor
  display inline-block
  padding-top 60px
  margin-top -60px

.articles-count
  display inline-flex
  width 25px
  height 25px
  border-radius 50%
  background-color #E8E8E8
  justify-content center
  align-items center
